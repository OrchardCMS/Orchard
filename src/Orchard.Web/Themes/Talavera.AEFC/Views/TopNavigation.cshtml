@{
    var theme = WorkContext.CurrentTheme;


    Func<dynamic, dynamic>
    Zone = x => Display(x); // Zone as an alias for Display to help make it obvious when we're displaying zones
}
<section id="layout-navigation" class="group">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#aefc-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img class="img-responsive" alt="@WorkContext.CurrentSite.SiteName" src="@Url.Content("~/Themes/" + theme.Path + "/Images/" + "aefc_logo_scaled-blacktext.png")" />
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="aefc-navbar-collapse-1" role="navigation">
                @Zone(Layout.Navigation)
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
</section>