@using Orchard.Utility.Extensions

@{ Layout.Title = T("Migrate Content Picker").ToString(); }
<div class="panel panel-default">
    @using (Html.BeginFormAntiForgeryPost()) {
        Html.ValidationSummary();
        <div class="panel-body">
            <fieldset>
                <legend>@T("Migrating Content Picker:")</legend>
                <span class="help-block">@T("This migration step will move your content picker menu items to their new location.")</span>
            </fieldset>
        </div>
        <div class="panel-footer">
            <button class="btn btn-primary" type="submit">@T("Migrate")</button>
        </div>
    }
</div>