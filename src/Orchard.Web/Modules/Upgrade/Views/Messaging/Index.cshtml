@using Orchard.Utility.Extensions

@{ Layout.Title = T("Migrate Messaging").ToString(); }

<div class="panel panel-default">
    @using (Html.BeginFormAntiForgeryPost()) {
        Html.ValidationSummary();
        <div class="panel-body">
            <fieldset>
                <legend>@T("Migrating Email Activities:")</legend>
                <span class="help-block">@T("This migration step will update the existing Send Email activities to use the new Message Queueing functionality.")</span>
            </fieldset>
        </div>
        <div class="panel-footer">
            <button class="btn btn-primary" type="submit">@T("Migrate")</button>
        </div>
    }
</div>