@model TermAdminIndexViewModel
@using Orchard.Taxonomies.ViewModels;

@using Orchard.Taxonomies.Helpers;
@{
    Style.Include("admin-taxonomy.css");
    Layout.Title = T("Manage terms for {0}", Model.Taxonomy.Name).ToString();

    var termIndex = 0;
}

@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.TaxonomyId)
    <div class="panel panel-default">
        <div class="panel-heading no-border">
            <div class="panel-heading-primary-group">
                <fieldset class="bulk-actions">
                    <div class="am-checkbox inline">
                        <input id="checkAll" class="check-all" type="checkbox">
                        <label for="checkAll">Select all</label>
                    </div>
                    <select class="form-control auto-size" id="publishActions" name="@Html.NameOf(m => m.BulkAction)">
                        @Html.SelectOption(Model.BulkAction, TermsAdminIndexBulkAction.None, T("Choose action...").ToString())
                        @Html.SelectOption(Model.BulkAction, TermsAdminIndexBulkAction.Delete, T("Remove").ToString())
                        @Html.SelectOption(Model.BulkAction, TermsAdminIndexBulkAction.Move, T("Move").ToString())
                    </select>
                    <input class="btn btn-primary" type="submit" name="submit.BulkEdit" value="@T("Apply")" />
                </fieldset>
            </div>
            <div class="panel-heading-actions">
                @Html.ActionLink(T("Add a term").ToString(), "SelectTerm", new { taxonomyId = Model.Taxonomy.Id }, new { @class = "btn btn-primary" })
            </div>
        </div>
        @if (Model.Terms.Any()) {
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-fw-widget table-hover no-footer" summary="@T("This is a table of the terms in your application")">
                            <thead>
                                <tr>
                                    <th scope="col" width="500">↓ @T("Term Name")</th>
                                    <th scope="col" width="20"></th>
                                </tr>
                            </thead>
                            @foreach (var termEntry in Model.Terms) {
                                var ti = termIndex;
                                <tr>
                                    <td>
                                        <input type="hidden" value="@Model.Terms[termIndex].Id" name="@Html.NameOf(m => m.Terms[ti].Id)" />
                                        <div class="am-checkbox indent-level-@termEntry.GetLevels() inline">
                                            <input type="checkbox" value="true"
                                                   name="@Html.NameOf(m => m.Terms[ti].IsChecked)"
                                                   id="@Html.NameOf(m => m.Terms[ti].IsChecked)" />
                                            <label></label>
                                        </div>
                                        @Html.ItemDisplayLink(termEntry.Name, termEntry.ContentItem)
                                    </td>
                                    <td>
                                        @Html.ItemEditLink(T("Edit").Text, termEntry.ContentItem, new { returnUrl = Url.Action("Index", "TermAdmin", new { taxonomyId = Model.Taxonomy.Id }) }) |
                                        @Html.ActionLink(T("Move").ToString(), "MoveTerm", new { taxonomyId = Model.Taxonomy.Id, termIds = termEntry.Id })
                                    </td>
                                </tr>
                                termIndex++;
                            }
                        </table>
                    </div>
                </div>
            </div>
            <div class="row am-datatable-footer">
                <div class="col-sm-12">
                    @Display(Model.Pager)
                </div>
            </div>
        }
        else {
            <div class="panel-body">
                <p>
                    There are currently no terms.
                    @Html.ActionLink(T("Add one now").Text, "SelectTerm", new { taxonomyId = Model.Taxonomy.Id }, new { @class = "" })
                </p>
            </div>
        }
    </div>
}