@model Orchard.ContentTypes.ViewModels.CreatePartViewModel

@{ Layout.Title = T("New Content Part").ToString(); }

<div class="panel">
    <div class="panel-body">
        <div class="row">
            @using (Html.BeginFormAntiForgeryPost()) {
                @Html.ValidationSummary()
                <div class="col-md-6">
                    <fieldset class="form-group">
                        <label for="Name">@T("Name")</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "text medium", autofocus = "autofocus" })
                        <span class="help-block">@T("Use no spaces or special characters. For example, \"MyCustomPart\"")</span>
                    </fieldset>
                    <fieldset class="text-left">
                        <button class="btn btn-primary" type="submit">@T("Create")</button>
                    </fieldset>
                </div>
            }
        </div>
    </div>
</div>