@model Orchard.ContentTypes.ViewModels.ContentTypeSettingsViewModel

<div class="form-group">
    <label class="control-label" for="@Html.FieldIdFor(m => m.Stereotype)">@T("Stereotype")</label>
    @Html.TextBoxFor(m => m.Stereotype, new { @class = "text large", placeholder = T("(Optional) The stereotype of the content type. e.g., Widget, MenuItem, ...") })
    @Html.ValidationMessageFor(m => m.Stereotype)
</div>

<div class="form-group">
    <div class="or-checkbox inline">
        @Html.EditorFor(m => m.Creatable)
        <label for="@Html.FieldIdFor(m => m.Creatable)" class="forcheckbox">@T("Creatable")</label>
    </div>
    <span class="help-block">@T("Determines if an instance of this content type can be created through the UI.")</span>
</div>

<div class="form-group">
    <div class="or-checkbox inline">
        @Html.EditorFor(m => m.Listable)
        <label for="@Html.FieldIdFor(m => m.Listable)" class="forcheckbox">@T("Listable")</label>
    </div>
    <span class="help-block">@T("Determines if an instance of this content type can be listed through the UI.")</span>
</div>

<div class="form-group">
    <div class="or-checkbox inline">
        @Html.EditorFor(m => m.Draftable)
        <label for="@Html.FieldIdFor(m => m.Draftable)" class="forcheckbox">@T("Draftable")</label>
    </div>
    <span class="help-block">@T("Determines if this content type supports draft versions.")</span>
</div>

<div class="form-group">
    <div class="or-checkbox inline">
        @Html.EditorFor(m => m.Securable)
        <label for="@Html.FieldIdFor(m => m.Securable)" class="forcheckbox">@T("Securable")</label>
    </div>
    <span class="help-block">@T("Determines if this content type can have custom permissions.")</span>
</div>
