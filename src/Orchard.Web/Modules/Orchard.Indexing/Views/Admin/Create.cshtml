@model string

@{ Layout.Title = T("Create Index").ToString(); }

<div class="panel panel-default">
    @using (Html.BeginFormAntiForgeryPost()) {
        <div class="panel-body no-border form-inline">
            <fieldset>
                @Html.TextBox("id", Model, new { @class = "form-control", autofocus = "autofocus" })
                <span class="help-block">@T("The technical name of the index to create. Must contain letters and numbers only.")</span>
            </fieldset>
        </div>
        <div class="panel-footer">
            <button class="btn btn-primary" type="submit">@T("Create")</button>
        </div>
    }
</div>
