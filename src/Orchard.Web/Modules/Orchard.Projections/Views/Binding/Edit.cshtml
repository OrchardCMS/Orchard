@model BindingEditViewModel
@using Orchard.Projections.Models;
@using Orchard.Projections.ViewModels;

@{
    Layout.Title = T("Binding").Text;
    Style.Include("admin-projections.css");
}

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginFormAntiForgeryPost()) {
            @Html.ValidationSummary()

            @Html.HiddenFor(m => m.Id);

            <fieldset>
                <div>
                    @Html.LabelFor(m => m.FullName, T("Content Part Record"))
                    @Html.TextBoxFor(m => m.FullName, new { @class = "text wide", @readonly = "readonly" })
                    <span class="help-block">@T("The content part to add to the providers.")</span>
                </div>

                <div>
                    @Html.LabelFor(m => m.Member, T("Member"))
                    @Html.TextBoxFor(m => m.Member, new { @class = "text medium", @readonly = "readonly" })
                    <span class="help-block">@T("The name of the member.")</span>
                </div>
            </fieldset>

            <fieldset>
                <div>
                    @Html.LabelFor(m => m.Display, T("Display"))
                    @Html.TextBoxFor(m => m.Display, new { @class = "text medium" })
                    <span class="help-block">@T("Text to display in lists for this property.")</span>
                </div>

                <div>
                    @Html.LabelFor(m => m.Description, T("Description"))
                    @Html.TextBoxFor(m => m.Description, new { @class = "text large" })
                    <span class="help-block">@T("Description to display in lists for this property.")</span>
                </div>
            </fieldset>

            <fieldset>
                <button class="btn btn-primary" type="submit" name="submit.Save" value="submit.Save"><i class="fa fa-floppy-o" aria-hidden="true"></i> @T("Save")</button>
            </fieldset>

        }
    </div>
</div>
