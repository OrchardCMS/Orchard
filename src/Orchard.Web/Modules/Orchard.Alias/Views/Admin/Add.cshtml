@{
    Layout.Title = T("Create Alias");
}

<div class="panel panel-default">
    @using (Html.BeginFormAntiForgeryPost()) {
        @Html.ValidationSummary()
        <div class="panel-body">
            <fieldset>
                <div>
                    <label for="aliasPath">@T("Alias Path")</label>
                    @Html.TextBox("aliasPath", (object)ViewBag.Path, new { @class = "text large" })
                    @Html.ValidationMessage("aliasPath")
                    <span class="help-block">@T("The path of the alias e.g., my-blog/my-post")</span>
                </div>
                <div>
                    <label for="routePath">@T("Route Path")</label>
                    @Html.TextBox("routePath", (object)ViewBag.Route, new { @class = "text medium" })
                    @Html.ValidationMessage("routePath")
                    <span class="help-block">@T("The actual route Orchard should call when the path is requested e.g., Blogs/Blog/Item?blogId=18")</span>
                </div>
            </fieldset>
        </div>
        <div class="row am-datatable-footer">
            <div class="col-sm-12">
                <fieldset>
                    <div>
                        <button class="btn btn-primary" type="submit"><i class="fa fa-floppy-o" aria-hidden="true"></i> @T("Save")</button>
                        <a href="@Url.Action("IndexUnmanaged", new { })" class="btn btn-default"><i class="fa fa-ban" aria-hidden="true"></i> @T("Cancel")</a>
                    </div>
                </fieldset>
            </div>
        </div>
    }
</div>
