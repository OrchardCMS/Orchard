@model Orchard.Packaging.ViewModels.PackagingSourcesViewModel

@{ Layout.Title = T("Settings").ToString(); }
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>@T("Gallery")</h2>
        <div class="manage">
            <a href="@Url.Action("AddSource", new { })" class="btn btn-primary"><i class="fa fa-plus"></i> @T("Add Feed").Text</a>
        </div>
    </div>
    @using (Html.BeginFormAntiForgeryPost()) {
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive table-with-footer">
                    <table class="table table-fw-widget data-table table-striped dataTable no-footer" summary="@T("This is a table of the gallery feeds in your application")">
                        <colgroup>
                            <col id="Col1" />
                            <col id="Col2" />
                            <col id="Col3" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th scope="col">@T("Title")</th>
                                <th scope="col">@T("Url")</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.Sources) {
                            <tr>
                                <td>@item.FeedTitle</td>
                                <td>@Html.Link(item.FeedUrl, item.FeedUrl)</td>
                                <td>
                                    <a class="btn btn-danger" href="@Url.Action("Remove", new { id = item.Id })" data-confirm="@T("Are you sure you want to delete this item?")"><i class="fa fa-trash"></i> @T("Delete")</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="row or-datatable-footer">
                    <div class="col-sm-12">
                        @*@Display(Model.Pager)*@
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@Display.Modal()